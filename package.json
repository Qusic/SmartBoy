{
  "name": "smartboy",
  "version": "1.0.0",
  "author": "qusic",
  "description": "A smart(?) telegram bot for fun!",
  "private": true,
  "main": "lib",
  "type": "module",
  "engines": {
    "node": ">=16.10.0"
  },
  "scripts": {
    "start": "shx mkdir -p data && cd data && node ..",
    "test": "eslint . && prettier -c ."
  },
  "dependencies": {
    "@azure/data-tables": "^13.2.2",
    "koa": "^2.14.2",
    "lowdb": "^6.0.1",
    "NeteaseCloudMusicApi": "^4.8.10",
    "telegraf": "^4.12.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "eslint": "^8.41.0",
    "prettier": "^2.8.8",
    "shx": "^0.3.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSpacing": false,
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderCaseInsensitive": true
  }
}
