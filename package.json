{
  "name": "smartboy",
  "version": "1.0.0",
  "author": "qusic",
  "description": "A smart(?) telegram bot for fun!",
  "private": true,
  "main": "lib",
  "type": "module",
  "engines": {
    "node": ">=15.0.0"
  },
  "scripts": {
    "start": "node .",
    "test": "eslint . && prettier -c ."
  },
  "dependencies": {
    "koa": "^2.13.1",
    "NeteaseCloudMusicApi": "^4.0.16",
    "redis": "^3.1.2",
    "telegraf": "^4.3.0"
  },
  "devDependencies": {
    "eslint": "^7.27.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.3.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "es2020": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSpacing": false
  }
}
