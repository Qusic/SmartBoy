{
  "name": "smartboy",
  "version": "1.0.0",
  "author": "qusic",
  "description": "A smart(?) telegram bot for fun!",
  "private": true,
  "main": "lib",
  "type": "module",
  "engines": {
    "node": ">=16.10.0"
  },
  "scripts": {
    "start": "shx mkdir -p data && cd data && node ..",
    "test": "eslint . && prettier -c ."
  },
  "dependencies": {
    "koa": "^2.14.1",
    "lowdb": "^5.0.5",
    "NeteaseCloudMusicApi": "^4.8.9",
    "telegraf": "^4.11.2"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "prettier": "^2.8.3",
    "shx": "^0.3.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSpacing": false
  }
}
