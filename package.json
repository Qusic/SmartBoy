{
  "name": "smartboy",
  "version": "1.0.0",
  "author": "qusic",
  "description": "A smart(?) telegram bot for fun!",
  "private": true,
  "main": "lib",
  "type": "module",
  "scripts": {
    "start": "mkdir -p data && cd data && node ..",
    "test": "eslint . && prettier -c ."
  },
  "dependencies": {
    "NeteaseCloudMusicApi": "^4.15.3",
    "koa": "^2.15.0",
    "lowdb": "^7.0.1",
    "openai": "^4.28.0",
    "proxy-agent": "^6.4.0",
    "telegraf": "^4.15.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSpacing": false,
    "bracketSameLine": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "quoteProps": "consistent",
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderCaseInsensitive": true
  }
}
